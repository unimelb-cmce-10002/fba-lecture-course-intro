%%% Colors and Beamer theme %%%
% https://designsystem.web.unimelb.edu.au/style-guide/colour-palette/
\definecolor{cousteau@heritageblue}{RGB}{0,15,70} % traditional heritage blue
\definecolor{cousteau@shipgrey}{RGB}{45,45,45}
\definecolor{cousteau@magpie}{RGB}{241,241,241} % magpie 25%
\definecolor{cousteau@blacksheoak}{RGB}{255,45,60} % blacksheoak
\definecolor{cousteau@possum}{RGB}{235,123,190} % possum pink
\definecolor{cousteau@laughingkookaburra}{RGB}{ 0,60,85} % laughing kookaburra




%% alternative alert colors
\newenvironment<>{alertenvb}{\begin{altenv}#1%
    {\color{cousteau@blacksheoak}\usebeamerfont{alerted text}\usebeamertemplate{alerted text begin}}
    {\usebeamertemplate{alerted text end}}{\color{.}}{}\ignorespaces}{\ifhmode\unskip\fi\end{altenv}}

\newcommand<>{\alertb}[1]{\begin{alertenvb}#2\relax#1\end{alertenvb}}


\newenvironment<>{alertenvc}{\begin{altenv}#1%
    {\color{cousteau@possum}\usebeamerfont{alerted text}\usebeamertemplate{alerted text begin}}
    {\usebeamertemplate{alerted text end}}{\color{.}}{}\ignorespaces}{\ifhmode\unskip\fi\end{altenv}}

\newcommand<>{\alertc}[1]{\begin{alertenvc}#2\relax#1\end{alertenvc}}

